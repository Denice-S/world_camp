<!DOCTYPE html>

<% layout("layouts/boilerplate")%>
    <div class="row">
        <h1 class="text-center">New CampSite</h1>
        <div class="col-6 offsee-3">
            <form action="/campsites" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class=mb-3>
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campsite[title]" required>
                    <div class="invalid-feedback">
                        Please enter a campsite title.
                    </div>
                </div>
                <div class=mb-3>
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campsite[location]" required>
                    <div class="invalid-feedback">
                        Please enter a location.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="imageFileMultiple" class="form-label">Upload Images</label>
                    <input class="form-control" type="file" name="image" id="imageFileMultiple" multiple>
                </div>


                <div class="mb-3">
                    <label class="form-label" for="price">Campsite Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic addon1">Â£</span>
                        <input type="Text" id="price" class="form-control" placeholder="0.0"
                            aria-describedby="price-label" name="campsite[price]" required>
                        <div class="invalid-feedback">
                            Please enter a price.
                        </div>
                    </div>
                </div>

                <div class=mb-3>
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campsite[description]"
                        required></textarea>
                    <div class="invalid-feedback">
                        Please enter a description.
                    </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Submit</button>
                </div>

            </form>
        </div>
    </div>
    <footer> <a href="/campsites">All Campsites</a></footer>
    <script src="" async defer></script>


