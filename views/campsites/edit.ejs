<% layout("layouts/boilerplate")%>
    <div class="row">
        <h1 class="text-center">Edit campsite</h1>
        <div class="col-6 offsee-3">
            <form action="/campsites/<%=campsite._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class=mb-3>
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campsite[title]"
                        value="<%=campsite.title%>" required>
                </div>
                <div class=mb-3>
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campsite[location]"
                        value="<%=campsite.location%>" required>
                </div>
                <div class=mb-3>
                    <div class="mb-3">
                        <label for="imageFileMultiple" class="form-label">Add More Images</label>
                        <input class="form-control" type="file" name="image" id="imageFileMultiple" multiple>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campsite Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic addon1">Â£</span>
                        <input type="Text" id="price" class="form-control" placeholder="0.0"
                            aria-describedby="price-label" name="campsite[price]" value="<%=campsite.price%>" required>
                    </div>
                </div>
                <div class=mb-3>
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campsite[description]"
                        required><%=campsite.description%></textarea>
                </div>
                <div class="mb-3">
                    <% campsite.images.forEach(function(image, i) { %>
                        <img src="<%=image.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=image.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% })%>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Submit</button>
                </div>
        </div>

        </form>
    </div>
    </div>

    <footer> <a href="/campsites/<%= campsite._id%>">Back to Campsites</a></footer>
    <script src="" async defer></script>