<% layout("layouts/boilerplate")%>
    <div id="cluster-map"></div>
    <h1>All Campsites</h1>



    <% for (let campsite of campsites) {%>
        <div class="div card mb-3">
            <div class="row">
                <div class="div col-md-4">
                    <%if(campsite.images.length){%>
                        <img class="img-fluid" alt="" src="<%=campsite.images[0].url%>">
                        <%}else {%>
                            <img class="img-fluid" alt=""
                                src="https://res.cloudinary.com/sprocket/image/upload/v1616509598/tirza-van-dijk-hbwdmqcmP6k-unsplash_fkhxbi.jpg">
                            <%}%>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="div card-title">
                            <%=campsite.title%>
                        </h5>
                        <p class="card-text">
                            <%=campsite.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=campsite.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/campsites/<%=campsite._id%>">View <%=campsite.title%></a>
                    </div>
                </div>
            </div>
        </div>
        <%}%>
            <script>
                const mapToken='<%-process.env.MAPBOX_TOKEN%>';
                const campsites={ features: <%-JSON.stringify(campsites)%>};
            </script>
            <script src="/scripts/clusterMap.js"